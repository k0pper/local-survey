        android:text="Radius"
        android:layout_margin="25dp"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/add_survey_configuration__radius_label"
        android:id="@+id/add_survey_configuration__radius_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="20"
        android:layout_margin="5dp"/>

