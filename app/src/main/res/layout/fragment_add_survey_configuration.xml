        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Availability"
        android:layout_margin="25dp"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/add_survey_configuration__availability_label"
        android:id="@+id/add_survey_configuration__availability_from_label"
