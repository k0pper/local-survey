<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tint="@android:color/holo_green_dark"
                app:srcCompat="@drawable/ic_live_tv_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="169dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="18dp"
                    android:text="Marketing Research to analyze customers"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/question_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Questions: 5"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/creatorTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="creator@domain.de"
                android:textAlignment="textEnd"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/publishTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Published 3 minutes ago"
                android:textAlignment="textEnd"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>